{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "FilmTrack",
  "version": "0.1.0",
  "identifier": "com.yanstu.filmtrack",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npx vite build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "FilmTrack - 个人影视管理平台",
        "width": 1600,
        "height": 900,
        "decorations": false,
        "resizable": false,
        "fullscreen": false,
        "visible": true,
        "center": true,
        "minWidth": 1600,
        "minHeight": 900,
        "maxWidth": 1600,
        "maxHeight": 900
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["main-capability"]
    },
    "withGlobalTauri": false
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "sql": {}
  }
}
